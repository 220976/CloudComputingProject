                            "template": {
                                "type": "Column3D",
                            "strokeOpacity": 0,
                            "tooltipText": "{categoryX}\n{valueY}",
                            "tooltipPosition": "pointer"
                            }
                        },
                    "dataFields": {
                            "valueY": "Global_Sales",
                        "categoryX": "Platform"
                    },
                    "sequencedInterpolation": true,
                    "sequencedInterpolationDelay": 100
                }],
            "legend": {
                "type": "Legend",
                "position": "right"
