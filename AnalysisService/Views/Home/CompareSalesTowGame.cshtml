@model List<AnalysisService.Models.vmCompareTowGame>
@using Newtonsoft.Json;
<script>
    am4core.ready(function () {
        let chart = am4core.createFromConfig({
                "type": "XYChart3D",
            "data": @Html.Raw(JsonConvert.SerializeObject(Model)),
                "xAxes": [{
                        "type": "CategoryAxis",
                    "dataFields": {
                            "category": "Platform"
                    },
                    "renderer": {
                            "grid": {
                                "template": {
                                    "type": "Grid",
